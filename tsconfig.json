{
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@/*": ["./*"],
      "a2n": ["core/index"]
    },
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
