{
  "name": "a2n",
  "version": "0.0.15",
  "description": "基于express的轻量级服务器",
  "main": "core/dist/a2n.core.js",
  "type": "commonjs",
  "types": "core/src/index.d.ts",
  "author": "liweiqiang",
  "license": "ISC",
  "scripts": {
    "serve": "cross-env NODE_ENV=tsnode nodemon -e * --exec ts-node -r tsconfig-paths/register --esm main/tsnode.ts --files",
    "test": "cross-env NODE_ENV=test nodemon -e * --ignore dist --exec npm run start",
    "start": "npm run build:serve && node dist/a2n.serve.js",
    "build:core": "webpack --config core/webpack.config.js",
    "build:serve": "webpack --config webpack.config.js"
  },
  "files": [
    "core",
    "main"
  ],
  "keywords": [
    "express",
    "a2n",
    "server",
    "node"
  ],
  "exports": {
    ".": "./core/dist/a2n.core.js",
    "./start": "./main/start.ts"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/webpack-env": "^1.18.3",
    "body-parser": "^1.20.1",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
